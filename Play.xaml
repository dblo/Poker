
<Page x:Class="poker.Play"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="680"
	Title="Play">

    <Page.Resources>
        
        <BitmapImage x:Key="masterImage" UriSource="C:\Users\First\Documents\Visual Studio 2013\Projects\poker\poker\cards.png" />
        <CroppedBitmap x:Key="clubs_1" 
      Source="{StaticResource masterImage}" SourceRect="0 0 73 98"/>
        <CroppedBitmap x:Key="clubs_2" 
      Source="{StaticResource masterImage}" SourceRect="74 0 73 98"/>
        <CroppedBitmap x:Key="spades_1" 
      Source="{StaticResource masterImage}" SourceRect="0 98 73 98"/>

        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

    </Page.Resources>
    
    <Grid VerticalAlignment="Bottom"
        Height="420"
        Width="500"
          Margin="12,0,28,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<Image Name="p1_card1" Source="{Binding Card1}"/>-->
       
        <Button Click="selectCard"
                Grid.Column="1"
                Grid.Row="6"
                Tag="Card_1"
                Style="{StaticResource CardButtonStyle}">
            <TextBlock Text="{Binding Card1}" />
        </Button>
        
        <Button Click="selectCard"
                Grid.Column="2"
                Grid.Row="6"
                Tag="Card_2"
                Style="{StaticResource CardButtonStyle}">
            <TextBlock Text="{Binding Card2}" />
        </Button>

        <Button Click="selectCard"
                Grid.Column="3"
                Grid.Row="6"
                Tag="Card_3"
                Style="{StaticResource CardButtonStyle}">
            <TextBlock Text="{Binding Card3}" />
        </Button>

        <Button Click="selectCard"
                Grid.Column="4"
                Grid.Row="6"
                Tag="Card_4"
                Style="{StaticResource CardButtonStyle}">
            <TextBlock Text="{Binding Card4}" />
        </Button>

        <Button Click="selectCard"
                Grid.Column="5"
                Grid.Row="6"
                Tag="Card_5"
                Style="{StaticResource CardButtonStyle}">
            <TextBlock Text="{Binding Card5}" />
        </Button>

        <Button Grid.Column="6"
                Grid.Row="6"
                Margin="5,5,5,5">Sub</Button>
        
    </Grid>
</Page>
