
<Page x:Class="poker.Play"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="340"
	Title="Play">

    <Page.Resources>
        <!-- Define some image resources, for use as the image element source. -->
        <BitmapImage x:Key="masterImage" UriSource="C:\Users\First\Documents\Visual Studio 2013\Projects\poker\poker\cards.png" />
        <CroppedBitmap x:Key="clubs_1" 
      Source="{StaticResource masterImage}" SourceRect="0 0 73 98"/>
    </Page.Resources>
    
    <Grid VerticalAlignment="Bottom"
        Height="420"
        Width="300"
          Margin="10,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Red"
                   Grid.Column="1"
                   Grid.Row="6">H8</TextBlock>

        <Image Grid.Column="1"
               Grid.Row="6"
               Margin="5"
               Source="{StaticResource clubs_1}" />
        
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Blue"
                   Grid.Column="2"
                   Grid.Row="6">S2</TextBlock>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Red"
                   Grid.Column="3"
                   Grid.Row="6">D1</TextBlock>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Blue"
                   Grid.Column="4"
                   Grid.Row="6">C3</TextBlock>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Red"
                   Grid.Column="5"
                   Grid.Row="6">S4</TextBlock>
        <Button Grid.Column="6"
                Grid.Row="6"
                Margin="5,5,5,5">Sub</Button>
    </Grid>
</Page>
